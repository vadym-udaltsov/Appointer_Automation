#!/usr/bin/env groovy
pipeline {
    agent any

    parameters {
        choice(name: 'Action', choices: ['deploy', 'destroy', 'redeploy'])
    }

    stages {
        stage('Build') {
            when {
                expression { params.Action != 'destroy' }
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    if (params.Action == 'destroy' || params.Action == 'redeploy') {
                        sh "chmod +x ./destroy.sh"
                        sh "./destroy.sh"
                    }
                    if (params.Action == 'deploy' || params.Action == 'redeploy')
                        sh "chmod +x ./deploy.sh"
                        sh './deploy.sh'

                }
            }
        }
    }
}