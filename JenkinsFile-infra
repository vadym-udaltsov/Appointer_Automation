#!/usr/bin/env groovy
pipeline {
    agent any

    parameters {
        choice(name: 'Action', choices: ['deploy', 'destroy', 'redeploy'])
        choice(name: 'Account', choices: ['993058472258', '773974733061', '143936507261'])
        choice(name: 'VerifiedEmail', choices: ['tkatlantis@gmail.com', 'sergii.udaltsov@gmail.com'])
    }

    stages {
        stage('Build') {
            when {
                expression { params.Action != 'destroy' }
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy') {
            steps {
                withCredentials([[
                                         $class           : 'AmazonWebServicesCredentialsBinding',
                                         credentialsId    : params.Account,
                                         accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                                         secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                                 ]]) {
                    script {
                        if (params.Action == 'destroy' || params.Action == 'redeploy') {
                            sh 'chmod +x ./destroy.sh'
                            sh './destroy.sh ' + params.Account
                        }
                        if (params.Action == 'deploy' || params.Action == 'redeploy') {
                            sh 'chmod +x ./deploy.sh'
                            sh './deploy.sh ' + params.Account + ' ' + params.VerifiedEmail + ' ' + params.Env
                        }
                    }
                }

            }
        }
    }
}